{
    "compilerOptions": {
        "module": "esnext",
        "lib": [
            "es2018",
            "esnext",
            "dom",
            "dom.iterable"
        ],
        "types": [],
        "target": "esnext",
        "noImplicitAny": true,
        "downlevelIteration": true,
        "moduleResolution": "node",
        "declaration": true,
        "sourceMap": true,
        "outDir": "esnext",
        "baseUrl": "./src",
        "jsx": "react",
        "jsxFactory": "h",
        "jsxFragmentFactory": "createFragment",
        "allowJs": true,
        "paths": {}
    },
    "include": [
        "src/types",
        "src/*"
    ],
    "exclude": [
        "src/tests/**/*"
    ]
}